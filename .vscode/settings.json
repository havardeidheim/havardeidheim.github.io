{
  "[liquid]": {
    "editor.quickSuggestions": true,
    "editor.wordWrap": "on",
    "editor.renderWhitespace": "all",
    "editor.acceptSuggestionOnEnter": "off",
    "editor.defaultFormatter": "Shopify.theme-check-vscode",
    "editor.formatOnSave": true
  },
  "files.associations": {
    "*.md": "liquid",
    "*.html": "liquid",
    "*.liquid": "liquid"
  }
}
